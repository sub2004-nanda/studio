rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }
    
    // /users/{userId}
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn(); // Allow any signed-in user to create their own user document
      allow update: if isSignedIn() && isAdmin(); // Only admins can update user roles/status
      allow delete: if false; // Nobody can delete user records for now
    }

    // /departments/{departmentId}
    match /departments/{departmentId} {
      allow read: if isSignedIn(); // Allow any signed-in user to read department lists
      allow create: if isAdmin(); // Only admins can create new departments
      allow update, delete: if isAdmin(); // Only admins can modify or delete departments
    }
    
    // /projects/{projectId}
    match /projects/{projectId} {
      allow read, write: if isSignedIn();
    }
  }
}
